extends layout/main

mixin format(data)
    section(class='pt-95 pb-90 content_26 ' + data.class)
        .container.px-xl-0
            .row.justify-content-center
                .col-xl-10.col-lg-11
                    div(class="row justify-content-center flex-row" + data.position)
                        .col-md-5.mb-3.mb-md-0
                            div(class='format-part' id= data.animationId data-aos-duration='600', data-aos='fade-down', data-aos-delay='300' )
                        .col-md-1
                        .col-md-5.d-flex.align-items-center
                            .mt-15.inner(data-aos-duration='600', data-aos='fade-down', data-aos-delay='0')
                                h2(class="f-40 text-adaptive color-" + data.titleColor)= data.title
                                .mt-15.mb-20.f-20.color-white.text-adaptive= data.description

                                a.pb-5.a-btn.sm.more.color-white.f-16.border-bottom-yellow(href= data.link)
                                    span.mr-10 Подробнее
                                    i.fas.fa-arrow-right.lh-36.f-14

mixin rule(data)
    .mb-40.col-md-12.col-lg-5.d-flex.align-items-baseline.aos-init.aos-animate(data-aos-duration='600', data-aos='fade-down', data-aos-delay='900')
        .inner
            div(class="rule-icon mb-20 mt-20 " + data.icon)
            .mb-10.f-20.bold.title= data.title
            .color-black.op-7.text-adaptive= data.description

block variables
    -
        var formats = [{class: "bg-blue", position: '', animationId: "story_anim", title: "Story-Ads", titleColor: 'mint', description: "Пространство для ваших историй. \n"+"Любимые форматы из социальных сетей на площадках\n"+" наших партнёров.", link: "formats.html#story"},
                    {class: "bg-purple", position: '-reverse', animationId: "outstream_anim", title: "Out-stream 2.0", titleColor: 'yellow', description: "Свежий взгляд на out-stream.\n" + "Интерактивные форматы, в которых сочетаются видео," + "графика и текст.", link: "formats.html#outstream"},
                    {class: "bg-mint", position: '', animationId: "instream_anim", title: "In-Stream", titleColor: 'blue', description: "Классика видеорекламы.\n" + "Привычные прероллы и мидроллы на лицензионных площадках.", link: "formats.html#instream"}]
    -
        var inventory = [{name: "IndependentMedia", delay: "0"},
                        {name: "Rambler", delay: "150"},
                        {name: "Shkulev", delay: "300"},
                        {name: "SportExpress", delay: "450"},
                        {name: "VGTRK", delay: "600"}]
    -
        var rules = [{title: "Любим пользователей", icon: "rule-1", description: "Для нас красота имеет значение. Мы убеждены, что только качественный контент и безупречный дизайн способны вызвать искренний интерес аудитории."},
                    {title: "Заботимся о бренде", icon: "rule-2", description: "Мы знаем, как важен контекст.\n"+"Поэтому сотрудничаем только с проверенными площадками и размещаем рекламу в безопасном окружении."},
                    {title: "Воплощаем лучшие идеи", icon: "rule-3", description: "Всегда ищем новые решения и тщательно тестируем их, чтобы предлагать рынку только эффективные и актуальные форматы."}]

block content
    section.pt-60.pb-80.bg-light.content_2
        .container.px-xl-0.text-center
            .row.mb-20.px-20.d-flex.justify-content-center
                #bm.col-lg-6.col-md-8.call-to-action-header.px-0
            .row.justify-content-center
                .col-xl-8.col-lg-10(data-aos-duration='600', data-aos='fade-down', data-aos-delay='0')
                    h2
                        | Форматы, с которыми хочется
                        span.gradient-text взаимодействовать
                .col-xl-7.col-lg-9.col-md-10(data-aos-duration='600', data-aos='fade-down', data-aos-delay='300')
                    .mt-35.f-22.medium.color-black.text-adaptive
                        | Мы объединили технологии и креатив на одной платформе, чтобы вывести контакт пользователя с брендом
                        | на новый уровень.
    for i in formats
        +format(i)
    section.pt-80.bg-light.content_28
        .container.px-xl-0.text-center
            .row.justify-content-center
                .col-lg-9(data-aos-duration='600', data-aos='fade-down', data-aos-delay='0')
                    h2.mb-45.small.color-black Прямой доступ к премиальному рекламному инвентарю
            .row.align-items-center.justify-content-center.no-gutters
                for j in inventory
                    .col-md-2.col-sm-4.col-6.mb-30(data-aos-duration='600', data-aos='fade-down', data-aos-delay=j.delay)
                        img(src='i/inventory/' + j.name + '.png', alt='')

    section.pt-50.bg-light.color-black.feature_8
        .container.px-xl-0
            .row
                .col-md-5.col-lg-4.d-flex.align-items-center.aos-init.aos-animate(data-aos-duration='600', data-aos='fade-down', data-aos-delay='600')
                    h2.mb-30.small.aos-init.aos-animate(data-aos-duration='600', data-aos='fade-down', data-aos-delay='0')
                        | Принципы
                        br
                        |                     нашей работы
                .col-md-1.col-lg-1
                .col-md-6.col-lg-7.d-flex.align-items-baseline.aos-init.aos-animate(data-aos-duration='600', data-aos='fade-down', data-aos-delay='900')
                    .row.w-100-percent
                        +rule(rules[0])
                        .col-lg-2
                        +rule(rules[1])
                        +rule(rules[2])
                        .col-lg-2
                        .col-md-12.col-lg-5.d-flex.aos-init.aos-animate.pt-60(data-aos-duration='600', data-aos='fade-down', data-aos-delay='900')
                            .inner
                                .key-idea.aos-init.aos-animate
                                    | Мы верим, что интерактивная реклама может притягивать взгляды.
